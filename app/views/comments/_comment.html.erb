<div class="card my-2">
  <div class="card-header p-1">
    <%= render 'shared/profile_picture', user: comment.author %>
    <%= link_to "#{comment.author.username}", comment.author, class: 'username link' %><span class="text-muted"> wrote <%= time_ago_in_words(comment.created_at) %> ago:</span></small>

    <div class="float-right">
    <% if current_user == comment.author || current_user == @post.author %>
        <%= link_to post_comment_path(@post, comment),
          method: :delete,
          class: "btn btn-outline-danger btn-sm",
          id: "delete-#{comment.id}",
          data: { confirm: "Are you sure you want to delete this comment?" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
    <% end %>
    </div>
  </div>
  <div class="card-body px-3 py-2">
    <p class="text-break mb-1"><%= comment.body %></p>
  </div>
</div>
