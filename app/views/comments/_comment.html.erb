<div class="card my-3">
  <div class="card-header p-1">
    <% if comment.author.profile_picture.attached? %>
      <%= image_tag comment.author.profile_picture.variant(resize_to_limit: [20, 20]), class: 'img-thumbnail' %>
    <% else %>
      <%= image_tag 'https://via.placeholder.com/20', class: 'img-thumbnail' %>
    <% end %>
    <small><%= link_to "#{comment.author.username}", comment.author, class: 'username link' %><span class="text-muted"> wrote <%= time_ago_in_words(comment.created_at) %> ago:</span></small>

    <div class="float-right">
    <% if current_user == comment.author || current_user == @post.author %>
        <%= link_to post_comment_path(@post, comment),
          method: :delete,
          class: "btn btn-outline-danger btn-sm",
          id: "delete-#{comment.id}",
          data: { confirm: "Are you sure you want to delete this comment?" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
    <% end %>
    </div>
  </div>
  <div class="card-body px-3 py-2">
    <p class="text-break mb-1"><%= comment.body %></p>
  </div>
</div>
