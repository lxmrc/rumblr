<div class="row">
  <div class="col-12 mx-auto">
    <div class="card mb-4">
      <div class="card-body">
        <h1><%= post.title %></h1>
        <p><%= post.body %></p>
      </div>
      <div class="card-footer text-muted">
          <span id="likes-<%= post.id %>"><%= pluralize(post.likes.count, 'note') %></span></small>
        <div class="float-right">
          <%= render 'posts/interaction_buttons', post: post %>
          <%= render 'posts/author_buttons', post: post %>
        </div>
      </div>
    </div>
  </div>
</div>
