<% @post.notes.each do |note| %>
  <% if note.class == Post %>
    <% if note.empty_reblog? %>
      <%= render 'notes/empty_reblog', reblog: note %>
    <% else %>
      <%= render 'posts/reblog', reblog: note %>
    <% end %>
  <% else %>
    <%= render note %>
  <% end %>
<% end %>

<%= render 'notes/note_header', 
  user: @post.root.author,
  action: "posted this.",
  link: @post.root %>
