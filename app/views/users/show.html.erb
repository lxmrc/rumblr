<div class="row mb-4">
  <div class="col-6 mx-auto">
      <div class="card shadow" >
        <div class="row no-gutters">
          <div class="col-md-3">
            <% if @user.profile_picture.attached? %>
              <%= image_tag @user.profile_picture, class: 'card-img', id: 'profile-picture' %>
            <% end %>
          </div>
          <div class="col-md-5">
            <div class="card-body">
              <h3 class="card-title"><%= @user.username %></h3>
              <p><%= @user.bio %></p>
              <% if current_user == @user %>
                <%= link_to 'Edit profile', edit_user_registration_path(@user), class: 'btn btn-primary btn-sm'%>
              <% end %>
            </div>
          </div>
        </div>
      </div>
  </div>
</div>

<div class="row">
  <div class="col-6 mx-auto">
    <%= render @posts %>
  </div>
</div>

