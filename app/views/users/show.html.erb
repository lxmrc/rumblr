<div class="row mb-4">
  <div class="col-6 mx-auto">
      <div class="card shadow" >
        <div class="row no-gutters">
          <div class="col-md-3">
            <%= image_tag "https://via.placeholder.com/100" %>
          </div>
          <div class="col-md-5">
            <div class="card-body">
              <h3 class="card-title"><%= @user.username %></h3>
              <% if current_user == @user %>
                <%= link_to 'Edit profile', edit_user_registration_path(@user), class: 'btn btn-primary btn-sm'%>
              <% end %>
            </div>
          </div>
        </div>
      </div>
  </div>
</div>
