<% provide(:title, @title) %>
<div class="row mt-4">
  <div class="col-md-6 col-sm-12 mx-auto">
    <div class="card">
      <div class="card-header"><%= @title %></div>
      <ul class="list-group list-group-flush">
        <% @users.each do |user| %>
          <a href="<%= user_path(user) %>" class="list-group-item list-group-item-action">
            <div style="display: inline-block; vertical-align: top;" class="mr-2">
              <% if user.profile_picture.attached? %>
                <%= image_tag user.profile_picture.variant(resize: "60x60").processed, style: "border-radius: 4px;" %>
              <% end %>
            </div>
            <div style="display: inline-block;">
              <h3 class="mb-0"><%= user %></h3>
              <p class="mb-0"><%= user.bio %></p>
            </div>
          </a>
        <% end %>
      </ul>
    </div>
  </div>
</div>
